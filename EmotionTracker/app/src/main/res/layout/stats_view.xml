<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph" />
    <Button
        android:layout_width="140dp"
        android:text="Home"
        android:id="@+id/home"
        android:layout_below="@id/weather"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <Spinner
        android:id="@+id/weather"
        android:textAlignment="center"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@id/table"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#52A7A7A7" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/graph"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Happy"
                android:padding="3dip" />
            <TextView
                android:text="Number 0"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Sad"
                android:padding="3dip" />
            <TextView
                android:text="Number 1"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Angry"
                android:padding="3dip" />
            <TextView
                android:text="Number 2"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Frustrated"
                android:padding="3dip" />
            <TextView
                android:text="Number 3"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Lonely"
                android:padding="3dip" />
            <TextView
                android:text="Number 4"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Anxious"
                android:padding="3dip" />
            <TextView
                android:text="Number 5"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Scared"
                android:padding="3dip" />
            <TextView
                android:text="Number 6"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Worried"
                android:padding="3dip" />
            <TextView
                android:text="Number 7"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Meh"
                android:padding="3dip" />
            <TextView
                android:text="Number 8"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Neutral/Other"
                android:padding="3dip" />
            <TextView
                android:text="Number 9"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>
</RelativeLayout>